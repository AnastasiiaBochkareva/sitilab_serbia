mixin Services-card(param={})
  .services-card
    .services-card__title.subtitle=param.title
      .services-card__number=param.number
    .services-card__subtitle.subtitle-sm=param.subtitle
    if (param.subtitleTwo)
      .services-card__subtitle.subtitle-sm=param.subtitleTwoText
    button.btn.btn_secondary.services-card__btn(class=param.btnClasses)=param.btn
    if (param.btnMob)
      button.btn.btn_secondary.services-card__btn(class=param.btnClassesMob)=param.btnMobText
    if (param.file)
      button.btn.btn_primary.services-card__file.subtitle Список доступных тестов
        +icon('file')




