mixin Btn-callback(param={})
  .btn-callback
    button.btn-callback__fixed
      img(src=`/assets/img/categories/callback.png`, alt="callback")
      .btn-callback__links 
        +icon('whatsapp-close')
        a(href="#").btn-callback__telegram
          img(src=`/assets/img/categories/telegram.png`, alt="whatsapp")
          span Telegram
        a(href="#").btn-callback__whatsapp
          img(src=`/assets/img/categories/whatsapp.png`, alt="whatsapp")
          span Whatsapp


    